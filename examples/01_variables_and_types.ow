// OwlLang: Variables and Types
// Demonstrates let bindings and basic types

fn main() {
    // Type inference
    let name = "OwlLang"
    let version = 1
    let pi = 3.14159
    let active = true

    // Explicit type annotations
    let count: Int = 42
    let message: String = "Hello"
    let enabled: Bool = false
    let ratio: Float = 0.75

    print(name)
    print(count)
    print(pi)
    print(active)
}
